extends layout

block content
    nav 
        h1  LOGO
        .profile
            - const profilePic = user.images.find(img=>img.mainPicture) 
            .img-container
                img(src=profilePic.url)
            h2   #{user.name}
        ul.menu
            li.active  Matches
                span.newMatches
            li  Messages
        ul.active-list
        a.logout-btn(href="/logout")  logout
    main
        ul.main-nav
            li.matching.active  matching
            li.info  info
        .card-container
            #matching
                h2
                .img-container
                p
                    span    Age 
                    span.age
                p
                    span    Gender 
                    span.gender
                .buttons
                    button.no  no
                    button.yes  yes
            #info.hidden
                h2
                img
                p
                    span    Age 
                    span.age
                p
                    span    Gender 
                    span.gender   
                button  Send a message!
    script(src="/socket.io/socket.io.js")